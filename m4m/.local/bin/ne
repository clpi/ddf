#!/usr/bin/env bash

export NVIM_APPNAME="${NVIM_APPNAME:-"ne"}"

export NE_CONFIG_DIR="${NE_CONFIG_DIR:-"/Users/clp/.config/ne"}"
export NE_CACHE_DIR="${NE_CACHE_DIR:-"/Users/clp/.cache/ne"}"
export NE_DATA_DIR="${NE_DATA_DIR:-"/Users/clp/.local/share/ne"}"
export NE_STATE_DIR="${NE_STATE_DIR:-"/Users/clp/.local/state/ne"}"

exec -a "$NVIM_APPNAME" nvim -u "$NE_CONFIG_DIR/init.lua" "$@"
